{
  "compilerOptions": {
    "target": "esnext",
    "module": "NodeNext",
    "moduleResolution": "node",
    "lib": ["es2015", "es2016", "es2017", "es2018", "dom"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "forceConsistentCasingInFileNames": false,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "outDir": "app",
    "rootDir": "."
  },

  "exclude": [
    "node_modules",
    "source/spec",
    "__test__",
    "app",
    "jest.config.ts.old"
  ]
}
